<div class="<%= default_styles %>" data-controller="<%= controller_name %>">
  <!-- Chat Header -->
  <div class="border-b border-gray-200 bg-white px-6 py-4 shadow-sm">
    <h2 class="text-lg font-semibold text-gray-900"><%= title || "Chat" %></h2>
  </div>

  <!-- Messages Container -->
  <div class="flex-1 overflow-y-auto" data-<%= controller_name %>-target="messagesContainer" id="messages">
    <% if messages.any? %>
      <% messages.each do |message| %>
        <%= message %>
      <% end %>
    <% else %>
      <div class="flex h-full items-center justify-center text-gray-500">
        <div class="text-center">
          <p class="mb-2 text-2xl font-medium">Start a conversation</p>
          <p class="text-sm">Ask me anything!</p>
        </div>
      </div>
    <% end %>

    <!-- Streaming Indicator (shown during streaming) -->
    <div id="streaming-indicator" class="hidden">
      <%= ui("conversation/streaming-indicator") %>
    </div>

    <!-- Auto-scroll anchor -->
    <div data-<%= controller_name %>-target="scrollAnchor"></div>
  </div>

  <%= user_message_box %>
</div>
