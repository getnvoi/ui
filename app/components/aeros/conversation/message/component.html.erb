<div class="<%= style(role:) %> <%= css %>">
  <div class="mx-auto max-w-3xl px-6">
    <div class="flex gap-4">
      <div class="flex-shrink-0">
        <div class="flex h-8 w-8 items-center justify-center rounded-full text-sm font-semibold text-white <%= avatar_color %>">
          <%= avatar_label %>
        </div>
      </div>
      <div class="min-w-0 flex-1">
        <div class="mb-1 text-sm font-semibold text-gray-900">
          <%= role_label %>
        </div>
        <div class="prose prose-sm max-w-none whitespace-pre-wrap text-gray-800">
          <%= content %>
        </div>
        <% if timestamp %>
          <div class="mt-1 text-xs text-gray-500">
            <%= timestamp %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
