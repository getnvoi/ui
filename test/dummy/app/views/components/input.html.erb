<h1 class="text-2xl font-bold mb-2">Input</h1>
<p class="text-muted-foreground mb-8">Cornerstone component for text fields, selects, and textareas.</p>

<div class="space-y-8 max-w-md">
  <section>
    <h2 class="text-lg font-semibold mb-4">Text Input</h2>
    <div class="space-y-4">
      <%= ui("input_text", name: "email", label: "Email", placeholder: "you@example.com") %>
      <%= ui("input_text", name: "disabled", label: "Disabled", value: "Can't edit this", disabled: true) %>
      <%= ui("input_text", name: "required", label: "Required Field", required: true, placeholder: "This is required") %>
    </div>
  </section>

  <section>
    <h2 class="text-lg font-semibold mb-4">With Helper Text</h2>
    <%= ui("input_text", name: "username", label: "Username", placeholder: "johndoe", helper_text: "This will be your public display name.") %>
  </section>

  <section>
    <h2 class="text-lg font-semibold mb-4">With Error</h2>
    <%= ui("input_text", name: "password", label: "Password", type: "password", value: "123", error_text: "Password must be at least 8 characters.") %>
  </section>

  <section>
    <h2 class="text-lg font-semibold mb-4">Select</h2>
    <%= ui("input_select", name: "country", label: "Country") do %>
      <option value="">Select a country...</option>
      <option value="us">United States</option>
      <option value="uk">United Kingdom</option>
      <option value="fr">France</option>
    <% end %>
  </section>

  <section>
    <h2 class="text-lg font-semibold mb-4">Textarea</h2>
    <%= ui("input_text_area", name: "bio", label: "Bio", placeholder: "Tell us about yourself...", helper_text: "Max 500 characters.") %>
  </section>

  <section>
    <h2 class="text-lg font-semibold mb-4">Slider</h2>
    <div class="space-y-4">
      <%= ui("input_slider", name: "opacity", label: "Opacity", value: 75, min: 0, max: 100) %>
      <%= ui("input_slider", name: "multiplier", label: "Multiplier", value: 1.0, min: 0.5, max: 2.0, step: 0.1) %>
    </div>
  </section>

  <section>
    <h2 class="text-lg font-semibold mb-4">Color Picker</h2>
    <div class="space-y-3">
      <%= ui("input_color", name: "primary", label: "Primary Color", value: "#475569") %>
      <%= ui("input_color", name: "accent", label: "Accent Color", value: "#3b82f6", size: :large) %>
    </div>
  </section>

  <section>
    <h2 class="text-lg font-semibold mb-4">Token Classes</h2>
    <div class="bg-muted p-4 rounded-lg text-sm font-mono space-y-1">
      <p><span class="text-muted-foreground"># Colors</span></p>
      <p>bg-input-bg, border-input-border, text-input-text</p>
      <p>text-input-placeholder, ring-input-ring</p>
      <p>border-input-error, border-input-success</p>
      <p class="pt-2"><span class="text-muted-foreground"># Radius</span></p>
      <p>rounded-input</p>
    </div>
  </section>
</div>
